<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/public/main.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <title>Dashboard | Admin</title>
</head>
<body>
    <div class="dashboard-wrapper">
      <div class="humburger">
        <i class="fa fa-bars"></i>
        <i class="fa fa-times"></i>
      </div>
      <main class="con">

        <aside>
          <div class="tri-up">
            <a href="/ticket/pending" ><i class="fa fa-hourglass-end"></i>Pending Tribute</a>
          <a href="/ticket/approved"class="active"><i class="fa fa-thumbs-up"></i>Aproved Tribute</a>
          </div>
          <form action="/logout" method="post">
            <div class="log-out">
              <button type="submit">Logout</button>
            </div>
          </form>
        </aside>
        <section>
          <!-- Tribute Items Start -->
         
          <% tributes.forEach(tribute => {%>

            <div class="tribute-box">
              <h2><%= tribute.tributeTitle%></h2>
              <p>
                <%= tribute.tribute%><br><br>
              <span><%= tribute.username%></span></p>
              <div class="btns">
                <form action="/ticket/delete" method="post">
                  <button type="submit" class="btn delete" name="id" value="<%= tribute._id%>">Delete</button>
                  
                </form>
                
              </div>
            </div>
            <% }) %>
          <!-- Tribute Items End -->
        </section>
      </main>
    </div>
    <script>
      let ham = document.querySelector(".fa-bars");
      let sideBar = document.querySelector("aside");
      let close = document.querySelector(".fa-times");

      function showSideBar(){
        ham.addEventListener("click", function(){
          sideBar.classList.remove("close");
        sideBar.classList.add("show");
          ham.style.display = "none";
          close.style.display = "block";
      })
      }
      showSideBar()
      function hideSideBar(){
        close.addEventListener("click", function(){
        sideBar.classList.remove("show");
        sideBar.classList.add("close");
          close.style.display = "none";
          ham.style.display = "block";
      })
      }
      hideSideBar()
